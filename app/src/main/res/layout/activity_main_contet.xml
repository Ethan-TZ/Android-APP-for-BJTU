<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContet"
    android:orientation="vertical"
    android:background="@drawable/cls">
    <include
        android:id="@+id/content_title"
        layout="@layout/title_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/content_title"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/master"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="BJTU"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_corner"
            android:gravity="bottom"
            android:layout_marginTop="75dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grade_page"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:src="@drawable/lidrg" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的成绩"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#704C4C"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/timetable_page"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:src="@drawable/licls" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的课表"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#704C4C"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/classroom_page"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:src="@drawable/liroom" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="空闲教室"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#704C4C"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner"
            android:orientation="horizontal"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:src="@drawable/limail"
                android:id="@+id/inmail"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/unreademail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="未读邮件"
                    android:textSize="20sp"
                    android:layout_marginTop="10dip"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#eeeeee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="查询邮件信息"
                    android:layout_marginTop="30dip"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_corner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/ecard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一卡通余额"
                android:textSize="20sp"
                android:textColor="#704C4C"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#eeeeee" />
            <TextView
                android:id="@+id/ipjj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ip地址还有过期"
                android:textColor="#704C4C"
                android:textSize="20sp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#eeeeee" />
            <TextView
                android:id="@+id/netyue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="网费余额还剩"
                android:textColor="#704C4C"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>